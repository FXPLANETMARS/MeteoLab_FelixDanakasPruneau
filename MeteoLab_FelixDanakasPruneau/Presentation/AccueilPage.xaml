<Page x:Class="MeteoLab_FelixDanakasPruneau.Presentation.AccueilPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <StackPanel Spacing="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="MeteoLab 2025" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Gestion de données météorologiques" FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>

            <Button Content="📝 Saisir des nouvelles données" 
                    Click="GoToSaisie_Click" 
                    Height="60" Width="300" FontSize="18" CornerRadius="10"/>

            <Button Content="📊 Voir les statistiques" 
                    Click="GoToStats_Click" 
                    Height="60" Width="300" FontSize="18" CornerRadius="10"/>
        </StackPanel>
    </Grid>
</Page>
